<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tv_gl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/et_gl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_gl"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Фамилия"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Имя"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Отчество"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Год"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Город"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Школа"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Опыт программирования"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="Знание языков программирования"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/tv_gl"
        app:layout_constraintEnd_toStartOf="@id/et_gl"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
<CalendarView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toEndOf="@id/et_gl"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>